    ViewBag.Title = "Index";
    Layout = "~/Views/Layouts/Layout.cshtml";
}
<!-- Trigger the modal with a button -->
<div class="row">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Donute Chart</h4>
                <div id="DonutChart"></div>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Bar Chart</h4>
                <div id="BarChart"></div>
            </div>
        </div>
    </div>
</div>
<button id="btnadd" type="button" class="btn btn-info" data-toggle="modal" data-target="#myModal" title="Create New Employee">+</button>
